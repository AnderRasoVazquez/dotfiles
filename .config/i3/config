# Toggle between dock mode and hide mode
bindsym $mod+b bar mode toggle

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+minus scratchpad show

# Volume control
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer set Master 7%+
bindsym XF86AudioLowerVolume exec --no-startup-id amixer set Master 7%-
bindsym XF86AudioMute exec --no-startup-id amixer set Master toggle

# Screen Capture | dependencies: shutter
bindsym Print exec --no-startup-id  shutter -f
bindsym Shift+Print exec --no-startup-id shutter -s
bindsym Control+Print exec --no-startup-id  shutter -f -d 5
bindsym Shift+Control+Print exec --no-startup-id shutter -s -d 5

# Brightness | dependencies: light-git
bindsym XF86MonBrightnessDown exec --no-startup-id light -Ur 1
bindsym XF86MonBrightnessUp exec --no-startup-id light -Ar 1
bindsym $mod+Control+Up exec --no-startup-id light -Ar 1
bindsym $mod+Control+Down exec --no-startup-id light -Ur 1

# Lock screen
bindsym $mod+Control+Shift+l exec --no-startup-id notify-send "Bloqueando equipo" && $HOME/scripts/lock.sh

# Add note
bindsym $mod+Control+a exec --no-startup-id $HOME/scripts/addtaskfromclipboard

# Transparencia
bindsym $mod+Control+minus exec --no-startup-id transset-df -a --dec 0.1
bindsym $mod+Control+plus exec --no-startup-id transset-df -a --inc 0.1

